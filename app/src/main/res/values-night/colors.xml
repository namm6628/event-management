<!-- res/values-night/colors.xml -->
<resources>

    <!-- Brand Mint -->
    <color name="mint_primary">#00C46C</color>
    <color name="mint_primary_dark">#00A86A</color>
    <color name="mint_accent">#00A186</color>

    <!-- SỬA THÀNH: xám đậm kiểu Google / Ticketbox hơn -->
    <color name="bg_primary">#202124</color>   <!-- nền chung -->
    <color name="bg_card">#2A2D32</color>     <!-- card / surface -->

    <color name="text_primary">#F5F5F5</color>
    <color name="text_secondary">#B0B3B8</color>

    <color name="border_light">#3A3D42</color>

    <!-- Alias cho layout cũ -->
    <color name="md_primary">@color/mint_primary</color>
    <color name="md_onPrimary">@android:color/black</color>
    <color name="md_surface">@color/bg_primary</color>
    <color name="md_onSurface">@color/text_primary</color>
    <color name="md_outline">@color/border_light</color>
    <color name="card_bg">@color/bg_card</color>

    <!-- Map luôn sp_* nếu trước dùng -->
    <color name="sp_green">@color/mint_primary</color>
    <color name="sp_green_dark">@color/mint_primary_dark</color>
    <color name="sp_black">@color/bg_primary</color>
    <color name="sp_gray_dark">@color/bg_card</color>
    <color name="sp_gray">@color/border_light</color>
    <color name="sp_on_dark">@android:color/white</color>
    <color name="sp_on_dark_60">#99FFFFFF</color>

</resources>
