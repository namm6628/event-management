<resources>
    <style name="App.FilterChip" parent="Widget.Material3.Chip.Assist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="checkedIconVisible">false</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/md_outline</item>
        <item name="rippleColor">@color/md_outline</item>
        <item name="chipBackgroundColor">@color/chip_bg_light</item>
        <item name="android:textColor">@color/chip_text_light</item>

    </style>

    <style name="App.PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:layout_height">48dp</item>
        <item name="cornerRadius">999dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>

        <item name="backgroundTint">@color/mint_primary</item>
        <item name="android:textColor">@color/md_onPrimary</item>
    </style>

    <style name="App.OutlineButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_height">40dp</item>
        <item name="cornerRadius">999dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="strokeColor">@color/mint_primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/mint_primary</item>
    </style>

    <style name="App.PriceText">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.TicketMate.FilterChip" parent="Widget.Material3.Chip.Filter">
        <item name="chipCornerRadius">12dp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="chipBackgroundColor">@color/chip_bg_light</item>
        <item name="checkedIconVisible">false</item>
        <item name="android:elevation">0dp</item>
        <item name="rippleColor">@color/mint_primary</item>
        <item name="chipStrokeColor">@color/border_light</item>
        <item name="chipStrokeWidth">0dp</item>
    </style>

    <style name="RatingBarTheme" parent="">
        <item name="colorControlActivated">@color/rating_yellow</item>
    </style>

    <style name="RatingDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_fade_out</item>
    </style>

    <style name="RatingDialogTheme"
        parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/RatingDialogAnimation</item>
    </style>

    <style name="Widget.TicketMate.BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@null</item>
    </style>
</resources>
