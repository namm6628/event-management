<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- Ô tìm kiếm -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:queryHint="Tìm sự kiện, nghệ sĩ, địa điểm..."
        app:iconifiedByDefault="false"
        android:background="@drawable/sp_bg_gradient"/>


    <!-- Nhóm chip lọc nhanh -->
    <!-- ... phía trên SearchView ... -->

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_marginTop="8dp">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="false"
            android:paddingEnd="4dp">

            <com.google.android.material.chip.Chip
                style="@style/App.FilterChip"
                android:text="Tất cả"
                android:checkable="true"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.chip.Chip
                style="@style/App.FilterChip"
                android:text="Âm nhạc"
                android:checkable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.chip.Chip
                style="@style/App.FilterChip"
                android:text="Hội thảo"
                android:checkable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.chip.Chip
                style="@style/App.FilterChip"
                android:text="Sân khấu"
                android:checkable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.chip.Chip
                style="@style/App.FilterChip"
                android:text="Thể thao"
                android:checkable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- ... phía dưới RecyclerView ... -->


    <!-- Danh sách sự kiện -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEvents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"/>
</LinearLayout>
