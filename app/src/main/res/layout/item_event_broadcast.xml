<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Hàng tiêu đề + nút xoá -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Tên sự kiện -->
            <TextView
                android:id="@+id/tvEventTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EM XINH SAY HI CONCERT - ĐÊM 1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <!-- Nút xoá thông báo (ẩn local) -->
            <ImageButton
                android:id="@+id/btnDismiss"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/delete"
                android:padding="2dp"
                android:focusable="false"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_delete_24" />
        </LinearLayout>

        <!-- Tiêu đề thông báo -->
        <TextView
            android:id="@+id/tvBroadcastTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="Thông báo từ BTC"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface" />

        <!-- Nội dung -->
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nội dung thông báo..."
            android:textSize="13sp"
            android:textColor="?attr/colorOnSurface" />

        <!-- Thời gian -->
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="5 phút trước"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
