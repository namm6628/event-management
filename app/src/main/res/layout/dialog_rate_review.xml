<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="@color/bg_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center_horizontal">

            <!-- Tiêu đề -->
            <TextView
                android:id="@+id/tvDialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn thấy sự kiện này thế nào?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:paddingBottom="12dp" />

            <!-- Rating -->
            <RatingBar
                android:id="@+id/dialogRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:rating="5"
                android:scaleX="1.3"
                android:scaleY="1.3"
                android:paddingBottom="14dp"
                android:theme="@style/RatingBarTheme" />

            <!-- Ô nhập nội dung -->
            <EditText
                android:id="@+id/etDialogComment"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top|start"
                android:hint="Chia sẻ trải nghiệm của bạn..."
                android:padding="12dp"
                android:background="@drawable/bg_input_review"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:textSize="14sp"
                android:overScrollMode="never"
                android:inputType="textMultiLine" />

            <!-- Nút chọn ảnh / video -->
            <Button
                android:id="@+id/btnPickMedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm ảnh / video"
                android:layout_marginTop="8dp" />

            <!-- Preview media -->
            <ImageView
                android:id="@+id/imgMediaPreview"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>
