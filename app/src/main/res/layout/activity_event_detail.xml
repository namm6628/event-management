<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_primary">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@color/md_onPrimary"
            app:navigationIcon="@drawable/ic_arrow_back_24"
            app:title="@string/event_detail_title" />
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content cuộn -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="72dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Dùng ConstraintLayout để control ratio + overlay -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- HEADER: ẢNH + CARD THÔNG TIN ĐÈ LÊN 1/3 DƯỚI -->
            <FrameLayout
                android:id="@+id/headerContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tvIntroHeader"
                app:layout_constraintDimensionRatio="1:1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bg_cover_gradient" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivCover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/event_image"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium" />

                <!-- CARD THÔNG TIN SỰ KIỆN – ĐÈ LÊN 1/3 DƯỚI CỦA ẢNH -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardEventInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="0dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/bg_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Tên sự kiện -->
                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tên sự kiện"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/text_primary" />

                        <!-- giữ lại cho code Java, nhưng ẩn -->
                        <TextView
                            android:id="@+id/tvArtist"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:visibility="gone" />

                        <!-- Hàng thời gian -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_event_24"
                                app:tint="@color/mint_primary" />

                            <TextView
                                android:id="@+id/tvTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="20:00 - 23:30, 29 Tháng 11, 2025"
                                android:textColor="@color/text_primary" />
                        </LinearLayout>

                        <!-- Hàng địa điểm -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_place_24"
                                app:tint="@color/mint_primary" />

                            <TextView
                                android:id="@+id/tvVenue"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:text="Khách sạn Sheraton Hải Phòng"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <!-- Địa chỉ chi tiết (dòng dưới địa điểm) -->
                        <TextView
                            android:id="@+id/tvAddressDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="28dp"
                            android:text="Số nhà, tên đường, phường/xã..."
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <!-- ====== GIỚI THIỆU ====== -->
            <TextView
                android:id="@+id/tvIntroHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Giới thiệu"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                app:layout_constraintTop_toBottomOf="@id/headerContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardIntro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/bg_card"
                app:layout_constraintTop_toBottomOf="@id/tvIntroHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvIntroTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Giới thiệu sự kiện:"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"
                        android:maxLines="4"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tvDescriptionToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:text="@string/see_more"
                        android:textColor="@color/mint_primary"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ====== BLOCK DỰ BÁO THỜI TIẾT ====== -->
            <LinearLayout
                android:id="@+id/layoutWeatherContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:padding="12dp"
                android:background="?attr/colorSurfaceVariant"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:elevation="2dp"
                app:layout_constraintTop_toBottomOf="@id/cardIntro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Skeleton loading -->
                    <LinearLayout
                        android:id="@+id/layoutSkeletonWeather"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:background="@drawable/bg_skeleton_rounded" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="14dp"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/bg_skeleton_rounded" />
                    </LinearLayout>

                    <!-- Nội dung thật -->
                    <LinearLayout
                        android:id="@+id/layoutWeather"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="invisible">

                        <ImageView
                            android:id="@+id/ivWeatherIcon"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/outline_cloud_24"
                            app:tint="?attr/colorOnSurfaceVariant" />

                        <TextView
                            android:id="@+id/tvWeather"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Đang tải dự báo..."
                            android:textSize="14sp"
                            android:textColor="?attr/colorOnSurfaceVariant" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- ====== KHUNG LOẠI VÉ ====== -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardTicketTypesWrapper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/bg_card"
                app:layout_constraintTop_toBottomOf="@id/layoutWeatherContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:id="@+id/layoutTicketHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvTicketDateTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Thứ 6, 22/11/2025 • 19:30"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/tvToggleTicketTypes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hiện loại vé"
                            android:textColor="@color/mint_primary"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/border_light" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerTicketTypes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ====== HÀNG BUTTON CHIA SẺ / THEO DÕI / BẢN ĐỒ ====== -->
            <LinearLayout
                android:id="@+id/layoutActions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintTop_toBottomOf="@id/cardTicketTypesWrapper"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShare"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/share_event"
                    android:textAllCaps="false"
                    android:textColor="@color/mint_primary"
                    app:strokeColor="@color/mint_primary"
                    app:strokeWidth="1dp"
                    app:icon="@android:drawable/ic_menu_share"
                    app:iconGravity="textStart"
                    app:iconTint="@color/mint_primary"
                    app:cornerRadius="999dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFollow"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/follow_artist"
                    android:textAllCaps="false"
                    android:textColor="@color/mint_primary"
                    app:strokeColor="@color/mint_primary"
                    app:strokeWidth="1dp"
                    app:icon="@drawable/ic_search_24"
                    app:iconGravity="textStart"
                    app:iconTint="@color/mint_primary"
                    app:cornerRadius="999dp"
                    android:checkable="true" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnOpenMap"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/open_map"
                    android:textAllCaps="false"
                    android:textColor="@color/md_onPrimary"
                    app:cornerRadius="999dp"
                    app:backgroundTint="@color/mint_primary" />
            </LinearLayout>

            <!-- ====== REVIEW HEADER ====== -->
            <LinearLayout
                android:id="@+id/layoutReviewHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/layoutActions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Tiêu đề -->
                <TextView
                    android:id="@+id/tvReviewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reviews_title"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/text_secondary" />

                <!-- Số lượng review -->
                <TextView
                    android:id="@+id/tvReviewCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="0"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp" />

                <!-- Đẩy nút viết đánh giá qua phải -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- Nút viết đánh giá -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnWriteReview"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Viết đánh giá"
                    android:textColor="?attr/colorPrimary"
                    android:padding="0dp"
                    android:minWidth="0dp" />
            </LinearLayout>

            <!-- Average rating -->
            <LinearLayout
                android:id="@+id/layoutAverageRating"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/layoutReviewHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <RatingBar
                    android:id="@+id/ratingAverage"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.5"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvAverageRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0/5"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <!-- Nút xem thêm review -->
            <TextView
                android:id="@+id/btnMoreReviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Xem thêm"
                android:textStyle="bold"
                android:textColor="@color/sp_green_dark"
                android:textAllCaps="false"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/layoutAverageRating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Text khi chưa có review -->
            <TextView
                android:id="@+id/tvEmptyReviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="@string/no_reviews"
                android:textColor="@color/text_secondary"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/btnMoreReviews"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Danh sách review -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerReviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/tvEmptyReviews"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- ========== Có thể bạn cũng thích ========== -->
            <LinearLayout
                android:id="@+id/layoutRecommended"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/recyclerReviews"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/tvRecommendedTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Có thể bạn cũng thích"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/sp_green_dark"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerRecommendedEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never" />
            </LinearLayout>
            <!-- ========== END RECOMMENDED ========== -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- THANH GIÁ + ĐẶT VÉ – CỐ ĐỊNH DƯỚI MÀN HÌNH -->
    <LinearLayout
        android:id="@+id/layoutBottomBar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:background="@drawable/bg_bottom_nav"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvBottomFromLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticket_from_label"
                android:textSize="12sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvBottomPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0₫"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBuyTicket"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Đặt vé"
            android:textAllCaps="false"
            app:cornerRadius="999dp" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
