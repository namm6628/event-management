<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- ICON SUCCESS -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_check_circle"
            android:layout_marginBottom="24dp" />

        <!-- TITLE -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán thành công!"
            android:textColor="?attr/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- MESSAGE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cảm ơn bạn đã đặt vé. Vé điện tử đã được gửi vào tài khoản của bạn."
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginBottom="32dp" />

        <!-- CARD CHI TIẾT ĐƠN HÀNG -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:strokeColor="?attr/colorOutlineVariant"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chi tiết đơn hàng"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp" />

                <!-- ORDER ID -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mã đơn hàng"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tvOrderId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#123456"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>

                <!-- QUANTITY -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Số lượng vé"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:id="@+id/tvTotalQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />
                </LinearLayout>

                <!-- DIVIDER -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?attr/colorOutlineVariant"
                    android:layout_marginVertical="12dp" />

                <!-- TOTAL PRICE -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tổng thanh toán"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 đ"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="?attr/colorPrimary" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- BUTTON HOME -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackHome"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:text="Về trang chủ"
            android:textStyle="bold"
            android:textSize="16sp"
            app:cornerRadius="28dp"
            app:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary" />

        <!-- BUTTON VIEW TICKETS -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewTickets"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Xem vé của tôi"
            android:textColor="?attr/colorPrimary" />

    </LinearLayout>

</RelativeLayout>
