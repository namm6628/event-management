<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Thành phố -->
        <TextView
            android:text="@string/city"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupCity"
            android:layout_marginTop="8dp"
            app:singleSelection="true"
            app:selectionRequired="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipNationwide"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nationwide" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHanoi"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hà Nội" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHcm"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TP.HCM" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDalat"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đà Lạt" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipOther"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city_other" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Miễn phí -->
        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/switchFree"
            android:text="@string/only_free"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Danh mục -->
        <TextView
            android:text="@string/category"
            style="@style/TextAppearance.Material3.TitleMedium"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupCat"
            android:layout_marginTop="8dp"
            app:singleSelection="true"
            app:selectionRequired="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCatAll"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_categories" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCatMusic"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_music" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCatArt"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_art" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCatSport"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_sport" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCatOther"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cat_other" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReset"
                android:text="@string/reset"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Space android:layout_width="8dp" android:layout_height="0dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApply"
                android:text="@string/apply"
                style="@style/Widget.Material3.Button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
