<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Tên sự kiện -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sự kiện"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Dòng thời gian -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_event_24" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:text="Thời gian"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Dòng địa điểm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_place_24"/>

            <TextView
                android:id="@+id/tvVenue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:text="Địa điểm"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Tổng quan vé / trạng thái -->
        <TextView
            android:id="@+id/tvTicketInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng số vé: 0/0 | Đang mở bán"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="6dp" />

        <!-- Chi tiết từng loại vé -->
        <TextView
            android:id="@+id/tvTicketTypesDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loại vé: VIP | Giá: 500.000đ | Đã bán: 0/10 | Đang mở bán"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="2dp" />

        <!-- Divider nhẹ -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp" />

        <!-- Hàng nút chức năng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="8dp">

            <Button
                android:id="@+id/btnBroadcast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:minHeight="0dp"
                android:paddingHorizontal="12dp"
                android:text="Gửi thông báo"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btnViewAttendees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:minHeight="0dp"
                android:paddingHorizontal="12dp"
                android:text="Vé &amp; danh sách"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:paddingHorizontal="12dp"
                android:text="Chỉnh sửa"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Nút quét QR check-in -->
        <Button
            android:id="@+id/btnScanQr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="12dp"
            android:minHeight="0dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="Quét mã QR check-in"
            android:textAllCaps="false"
            android:textSize="13sp" />

        <!-- Nút danh sách check-in -->
        <Button
            android:id="@+id/btnCheckinList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="12dp"
            android:minHeight="0dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="Danh sách check-in"
            android:textAllCaps="false"
            android:textSize="13sp" />

        <!-- Nút quản lý nhân viên / CTV -->
        <Button
            android:id="@+id/btnManageStaff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="12dp"
            android:minHeight="0dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="Nhân viên / CTV"
            android:textAllCaps="false"
            android:textSize="13sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
