<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên sự kiện">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nghệ sĩ / Diễn giả (không có thì bỏ trống)">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thể loại sự kiện">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả sự kiện">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:maxLines="6" />
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa điểm tổ chức (Tên địa điểm, tòa nhà…)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutAddressDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Địa chỉ chi tiết (số nhà, tên đường…)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAddressDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tổng số vé của sự kiện">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTotalSeats"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- KHUNG LOẠI VÉ -->
        <TextView
            android:id="@+id/tvTicketHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Loại vé"
            android:textStyle="bold"
            android:textSize="16sp" />


        <LinearLayout
            android:id="@+id/layoutTicketContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddTicketType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Thêm loại vé"
            android:textAllCaps="false" />


        <TextView
            android:id="@+id/tvPickedDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn ngày &amp; giờ tổ chức sự kiện"
            android:textSize="13sp"
            android:layout_marginTop="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPickDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn ngày &amp; giờ" />

        <TextView
            android:id="@+id/tvPickImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh bìa sự kiện"
            android:textSize="13sp"
            android:layout_marginTop="8dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPickImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh"
            android:layout_marginTop="12dp"/>

        <ImageView
            android:id="@+id/ivPreview"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"/>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu sự kiện"
            android:layout_marginTop="16dp"/>



    </LinearLayout>
</ScrollView>
